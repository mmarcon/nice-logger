<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333333"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/log_clear_btn"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/log_clear"
            android:textAllCaps="true"
            android:textColor="#eeeeee" />

        <ImageView
            android:id="@+id/log_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:visibility="visible"
            android:src="@drawable/ic_action_error" />

        <ImageView
            android:id="@+id/log_location_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:visibility="gone"
            android:src="@drawable/ic_action_location_found" />

        <ImageView
            android:id="@+id/log_location_not_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:visibility="gone"
            android:src="@drawable/ic_action_location_off" />

        <ImageView
            android:id="@+id/log_net_cell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:visibility="visible"
            android:src="@drawable/ic_action_network_cell" />

        <ImageView
            android:id="@+id/log_net_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:visibility="visible"
            android:src="@drawable/ic_action_network_wifi" />
    
    </LinearLayout>
    
    <ImageView
        android:id="@+id/log_location_map"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <ListView
        android:id="@+id/log_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:scrollbars="none" />

</LinearLayout>
